package assessment;

public class ArmstrongNumber {

	public static void main(String[] args) {
		int num = 153;
		int original = num;
		int result= 0;
		while (num>0) {
			int sum = num%10;
			result = result+(sum*sum*sum);
			num = num/10;
		}
		if (result == original) {
			System.out.println("Given Number Is Armstrong");
		}
		else {
			System.out.println("Given Number is Not Armstrong");
		}

	}}


